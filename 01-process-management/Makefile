# Process Management Demo Makefile

.PHONY: build run clean help

# Default target
help:
	@echo "ğŸš€ Process Management Demo"
	@echo "========================="
	@echo ""
	@echo "Available targets:"
	@echo "  build    - Compile the demo program"
	@echo "  run      - Build and run the demo"
	@echo "  clean    - Remove built binaries"
	@echo "  help     - Show this help message"
	@echo ""
	@echo "Usage examples:"
	@echo "  make run     # Build and run the interactive demo"
	@echo "  make build   # Just compile the binary"

# Build the demo
build:
	@echo "ğŸ”¨ Building process management demo..."
	go build -o process-demo demo.go
	@echo "âœ… Build complete: ./process-demo"

# Run the demo
run: build
	@echo "ğŸš€ Starting process management demo..."
	@echo "âš ï¸  Note: Some features may require elevated privileges"
	./process-demo

# Clean built files
clean:
	@echo "ğŸ§¹ Cleaning up..."
	rm -f process-demo
	@echo "âœ… Cleanup complete"

# Development targets
dev-run: build
	@echo "ğŸ› ï¸  Running in development mode..."
	sudo ./process-demo
